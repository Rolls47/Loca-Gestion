{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="mt-5">
            <h1 class="d-flex justify-content-center">{{ location.name }} - {{ location.city }}</h1>
            <p class="d-flex justify-content-center">{{ location.address }} - {{ countOfProperty }} Propriétées </p>
        </div>
        <div class="mb-3 d-flex justify-content-end mr-5">
            <a href="{{ path('locationAccounting_show', {'slug': location.slug}) }}" class="card-link mr-3">Voir les lignes
                compta</a>
        </div>
        <div class="row justify-content-around">
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta localisation</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumByLocation|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta propriétées</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumPropertiesByLocation|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            {% if benefit > 0 %}
                <div class="card border-success mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-success">
                        <h5 class="card-title">{{ benefit|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% else %}
                <div class="card border-warning radius-benefit-red mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-benefit-red">
                        <h5 class="card-title">{{ benefit|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="row justify-content-around">
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta localisation Eau</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumLocationWater|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta propriétées Eau</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumPropertiesWater|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            {% if benefitWater > 0 %}
                <div class="card border-success mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-success">
                        <h5 class="card-title">{{ benefitWater|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% else %}
                <div class="card border-warning radius-benefit-red mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-benefit-red">
                        <h5 class="card-title">{{ benefitWater|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="row justify-content-around">
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta localisation EDF</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumLocationElec|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            <div class="card border-success mb-3" style="min-width: 14rem;">
                <div class="card-header">Compta propriétées EDF</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumPropertiesElec|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            {% if benefitElec > 0 %}
                <div class="card border-success mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-success">
                        <h5 class="card-title">{{ benefitElec|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% else %}
                <div class="card border-warning radius-benefit-red mb-3" style="min-width: 14rem;">
                    <div class="card-header">Bénéfice</div>
                    <div class="card-body text-benefit-red">
                        <h5 class="card-title">{{ benefitElec|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-12 d-flex justify-content-around flex-wrap mb-5">
            {% include 'Components/Property/card.html.twig' %}
        </div>
    </div>
{% endblock %}