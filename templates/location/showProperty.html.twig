{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="mt-5">
            <h1 class="d-flex justify-content-center">{{ location.name }} - {{ location.city }}</h1>
            <p class="d-flex justify-content-center">{{ location.address }} - {{ countOfProperty }} Propriétées </p>
        </div>
        <div class="row justify-content-around">
            <div class="card border-success mb-3" style="min-width: 10rem;">
                <div class="card-header">Compta localisation</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumByLocation|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            <div class="card border-success mb-3" style="min-width: 10rem;">
                <div class="card-header">Compta propriétées</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ sumPropertiesByLocation|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
            <div class="card border-success mb-3" style="min-width: 10rem;">
                <div class="card-header">Bénéfice</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{ benefit|format_currency('EUR', {rounding_mode: 'floor'}) }}</h5>
                </div>
            </div>
        </div>
            <div>
                <p>faire des sommes avec eau et electricité pour chaque localisation </p>
            </div>
        <div class="d-flex justify-content-around">
            {% include 'Components/Property/card.html.twig' %}
        </div>
    </div>
{% endblock %}